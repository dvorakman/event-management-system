{
  "name": "event-management-system",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run db:migrate && next build",
    "check": "next lint && tsc --noEmit",
    "db:generate": "drizzle-kit generate --schema=./src/server/db/schema.ts --out=./drizzle/migrations --dialect=sqlite",
    "db:migrate": "bun run scripts/migrate.ts",
    "db:push": "drizzle-kit push --schema=./src/server/db/schema.ts --dialect=sqlite",
    "db:studio": "drizzle-kit studio",
    "dev": "next dev --turbo",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "db:local:start": "sh start-local-db.sh",
    "db:local:start:win": "powershell -ExecutionPolicy Bypass -File .\\start-local-db.ps1"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.12.5",
    "@libsql/client": "^0.15.0",
    "@react-three/drei": "^10.0.4",
    "@react-three/fiber": "^9.0.0-alpha.8",
    "@t3-oss/env-nextjs": "^0.10.1",
    "@tanstack/react-query": "^5.50.0",
    "@trpc/client": "^11.0.0-rc.446",
    "@trpc/react-query": "^11.0.0-rc.446",
    "@trpc/server": "^11.0.0-rc.446",
    "@types/sqlite3": "^5.1.0",
    "better-sqlite3": "^11.9.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.1",
    "drizzle-zod": "^0.7.0",
    "framer-motion": "^12.5.0",
    "geist": "^1.3.0",
    "lucide-react": "^0.483.0",
    "next": "^15.0.1",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "server-only": "^0.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "superjson": "^2.2.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.174.0",
    "three-globe": "^2.42.2",
    "zod": "^3.23.3"
  },
  "devDependencies": {
    "@clerk/types": "^4.48.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "drizzle-kit": "^0.30.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.5.3"
  },
  "ct3aMetadata": {
    "initVersion": "7.38.1"
  }
}
