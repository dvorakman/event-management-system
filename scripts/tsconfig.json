{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Override options for scripts */
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    /* Allow 'any' types in these utility scripts */
    "noImplicitAny": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 